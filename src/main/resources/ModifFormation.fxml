<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.ModifFormation"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #2196F3, #64B5F6);">

    <!-- Titre -->
    <Label text="Modifier Formation" layoutX="160.0" layoutY="30.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Formulaire -->
    <VBox spacing="15" layoutX="100.0" layoutY="80.0" prefWidth="400.0">
        <HBox>
            <Label text="Titre" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfTitre" promptText="Entrez le titre" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="Description" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfDescription" promptText="Entrez la description" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="Date Début" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfDateD" promptText="YYYY-MM-DD" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="Date Fin" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfDateF" promptText="YYYY-MM-DD" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="Durée" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfDuree" promptText="Entrez la durée" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="Image" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfImage" promptText="Entrez l'image" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <HBox>
            <Label text="ID Formateur" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <TextField fx:id="tfIdFormateur" promptText="Entrez l'ID formateur" style="-fx-background-color: white; -fx-border-radius: 5;"/>
        </HBox>

        <!-- Bouton Enregistrer -->
        <Button text="Enregistrer" onAction="#handleSave" layoutX="200.0" layoutY="370.0"
                style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5;"/>
    </VBox>
</AnchorPane>
