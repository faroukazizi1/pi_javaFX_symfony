<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AfficherFormateur"
            prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #1565C0, #64B5F6);">

    <!-- Conteneur principal -->
    <VBox spacing="10" layoutX="30.0" layoutY="30.0" prefWidth="940.0" prefHeight="640.0"
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 15;
               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0.5, 0, 5);">

        <!-- Titre -->
        <Label text="Gestion des Formateurs"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;
                      -fx-alignment: center;"/>

        <!-- TableView -->
        <TableView fx:id="tableFormateurs"
                   style="-fx-background-color: white; -fx-border-color: #0D47A1;
                   -fx-border-radius: 10; -fx-padding: 5;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colNumero" text="Numéro" prefWidth="120"/>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colSpecialite" text="Spécialité" prefWidth="150"/>

                <!-- Colonne Modifier -->
                <TableColumn fx:id="colUpdate" text="Modifier" prefWidth="120"/>

                <!-- Colonne Supprimer -->
                <TableColumn fx:id="colDelete" text="Supprimer" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
