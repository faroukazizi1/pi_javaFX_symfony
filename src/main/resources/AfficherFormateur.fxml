<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AfficherFormateur"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@style.css">

    <!-- Sidebar -->
    <VBox fx:id="sidebar" alignment="CENTER" prefHeight="700" prefWidth="250" styleClass="sidebar">
        <Button styleClass="sidebar-link" text="Accueil" />
        <Button fx:id="btnFormateurs" styleClass="sidebar-link-active" text="Formateurs" />
        <Button styleClass="sidebar-link" text="Formations" />
        <Button styleClass="sidebar-logout" text="Déconnexion" />
    </VBox>

    <!-- Conteneur principal -->
    <VBox layoutX="270.0" layoutY="30.0" prefWidth="700.0" prefHeight="640.0" spacing="20" styleClass="body">
        <!-- Titre -->
        <Label text="Gestion des Formateurs" styleClass="title" alignment="CENTER" />

        <!-- Bouton pour ajouter un formateur -->
        <Button fx:id="btnAjouterFormateur" text="AjouetFormateur" onAction="#handleAjouterFormateur" styleClass="btn-ajouter-formateur"/>

        <!-- TableView -->
        <TableView fx:id="tableFormateurs" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80" />
                <TableColumn fx:id="colNumero" text="Numéro" prefWidth="120" />
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150" />
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150" />
                <TableColumn fx:id="colSpecialite" text="Spécialité" prefWidth="150" />

                <!-- Modifier column with button -->
                <TableColumn fx:id="colUpdate" text="Modifier" prefWidth="120" />

                <!-- Supprimer column with button -->
                <TableColumn fx:id="colDelete" text="Supprimer" prefWidth="120" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
