<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.AjouterFormateur">

    <Label text="Ajouter un Formateur" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtNumero" promptText="Numéro"/>
    <TextField fx:id="txtNom" promptText="Nom"/>
    <TextField fx:id="txtPrenom" promptText="Prénom"/>
    <TextField fx:id="txtEmail" promptText="Email"/>
    <TextField fx:id="txtSpecialite" promptText="Spécialité"/>

    <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterFormateur"/>
</VBox>
