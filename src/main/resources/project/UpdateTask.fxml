<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateTaskController">

    <Label layoutX="49.0" layoutY="14.0" styleClass="label" text="Task Title:" />
    <TextField fx:id="titreField" layoutX="50" layoutY="50" promptText="Task Title" styleClass="text-field" />

    <Label layoutX="50" layoutY="100" styleClass="label" text="Description:" />
    <TextArea fx:id="descriptionField" layoutX="50" layoutY="130" prefHeight="86.0" prefWidth="478.0" promptText="Description" styleClass="text-area" />

    <Label layoutX="50" layoutY="220" styleClass="label" text="Date:" />
    <DatePicker fx:id="dateField" layoutX="50" layoutY="250" promptText="Task Date" styleClass="date-picker" />



    <Label layoutX="50" layoutY="380" styleClass="label" text="Project:" />
    <ComboBox fx:id="projectComboBox" layoutX="50" layoutY="410" styleClass="combo-box" />

    <Label layoutX="50" layoutY="460" styleClass="label" text="User:" />
    <ComboBox fx:id="userComboBox" layoutX="50" layoutY="490" styleClass="combo-box" />

    <Button layoutX="50" layoutY="540" onAction="#onUpdateTask" styleClass="button" text="Update Task" />
</AnchorPane>
